<iscontent type="text/html" charset="UTF-8" compact="true"/>
<isinclude template="util/modules"/>

<h2>${Resource.msg('global.carousel.featuredproducts','locale',null)}</h2>

<div id="slick-carousel">
    <isloop items="${slotcontent.content}" var="product">
        <div>
            <isproducttile product="${product}" showswatches="${true}" showpricing="${true}" showpromotion="${false}" showrating="${false}"/>
        </div>
    </isloop>
</div>
