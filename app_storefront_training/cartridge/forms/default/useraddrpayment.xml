<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19">


        <!-- User Details -->

        <!-- products -->
            <field formid="fname" label="forms.user.personalinfo.firstname.label" type="string" mandatory="true" binding="firstName" max-length="50"/>
            <field formid="lname" label="forms.user.personalinfo.lastname.label" type="string" mandatory="true" binding="lastName" max-length="50"/>
            <field formid="gender" label="forms.user.personalinfo.gender.label" type="string" mandatory="true" bindings="gender">
                 <options>
                    <option optionid="Female" label="gender.female" value="Female"/>
                    <option optionid="Male" label="gender.male" value="Male"/>
                </options>
            </field>
            <field formid="birthdate" label="forms.user.personalinfo.birthdate.label" type="date" mandatory="true" binding="birthdate" max-length="50"/>
            <field formid="website" label="forms.user.personalinfo.website.label" type="string" mandatory="true" regex="^((https?|ftp|smtp):\/\/)?(www.)?[a-z0-9]+\.[a-z]+(\/[a-zA-Z0-9#]+\/?)*$" 
            parse-error="forms.user.personalinfo.email.parse-error" value-error="forms.user.personalinfo.email.value-error" binding="website" max-length="50"/>
            <field formid="email" label="forms.user.personalinfo.email.label" type="string" mandatory="true" regexp="^[\w-\.]{1,}@([\da-zA-Z-]{1,}\.){1,}[\da-zA-Z-]{2,6}$"
            parse-error="forms.user.personalinfo.email.parse-error" value-error="forms.user.personalinfo.email.value-error" binding="email" max-length="50"/>
            <field formid="subscribe" label="forms.user.personalinfo.subscribe.label" type="boolean" mandatory="true" binding="subscribe"/>
            <field formid="comments" label="forms.user.personalinfo.comments.label" type="string" binding="comments" max-length="150"/>
    
        <!-- Address -->
            <field formid="address1" label="forms.user.address.address1.label" type="string" mandatory="true" binding="address1" max-length="50"/>
            <field formid="address2" label="forms.user.address.address2.label" type="string" binding="address2" max-length="50"/>
            <field formid="country" label="forms.user.address.country.label" type="string" mandatory="true" binding="country">
                 <options>
                    <option optionid="washington" label="country.washington" value="washington"/>
                      <option optionid="newyork" label="country.newyork" value="newyork"/>
                </options>
            </field>
            <field formid="state" label="forms.user.address.state.label" type="string" mandatory="true" binding="state">
                 <options>
                    <option optionid="washington" label="state.washington" value="washington"/>
                      <option optionid="newyork" label="state.newyork" value="newyork"/>
                </options>
            </field>
             <field formid="city" label="forms.user.address.city.label" type="string" mandatory="true" binding="city" max-length="50"/>
            <field formid="zipcode" label="forms.user.address.zipcode.label" type="integer" mandatory="true" binding="zipcode" max-length="50"/>
            <field formid="phone" label="forms.user.address.phone.label" type="integer" mandatory="true" binding="phone" max-length="50"/>

        <!-- Payment -->

             <field formid="creditcard" label="forms.user.payment.creditcard.label" type="boolean" binding="creditcard"/>
            <field formid="billmelater" label="forms.user.payment.billmelater.label" type="boolean" binding="billmelater"/>
   
            <field formid="cardname" label="forms.user.payment.creditcard.cardname.label" type="string" mandatory="true" binding="cardname" max-length="50"/>
            <field formid="type" label="forms.user.payment.creditcard.type.label" type="string" mandatory="true" binding="type" max-length="50"/>
            <field formid="number" label="forms.user.payment.creditcard.number.label" type="integer" mandatory="true" binding="number" max-length="50"/>
            <field formid="expirydate" label="forms.user.payment.creditcard.expirydate.label" type="date" mandatory="true" binding="expirydate" max-length="50"/>
            <field formid="securitycode" label="forms.user.payment.creditcard.securitycode.label" type="integer" mandatory="true" binding="securitycode" max-length="50"/>

            <field formid="billdob" label="forms.user.payment.billmelater.dob.label" type="date" mandatory="true" binding="billdob" max-length="50"/>
            <field formid="ssn" label="forms.user.payment.billmelater.ssn.label" type="integer" mandatory="true" binding="ssn" max-length="50"/>
            <field formid="termsandconditions" label="forms.user.payment.termsandconditions.label" type="boolean" mandatory="true" binding="termsandconditions"/>
             <action formid="continue" valid-form="true"/>
   
</form>
